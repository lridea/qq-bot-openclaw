# 环境配置示例
# 复制此文件为 .env 并填写实际配置

# ========== AI 模型配置 ==========
# 选择要使用的模型：zhipu/deepseek/siliconflow/ollama/moonshot/ohmygpt
AI_MODEL=zhipu

# 指定具体模型（可选，如果不填则使用供应商的默认模型）
# 例如：
# - AI_MODEL=ohmygpt，MODEL_NAME=gpt-4o（使用 OhMyGPT 的 GPT-4o）
# - AI_MODEL=ohmygpt，MODEL_NAME=glm-4（使用 OhMyGPT 的 GLM-4）
# - AI_MODEL=siliconflow，MODEL_NAME=THUDM/glm-4-9b-chat（使用硅基流动的 GLM-4）
MODEL_NAME=

# ========== 智谱 AI 配置 ==========
# 智谱 AI API Key（https://open.bigmodel.cn/）
OPENCLAW_API_KEY=your_zhipu_api_key_here
ZHIPU_API_KEY=your_zhipu_api_key_here

# ========== DeepSeek 配置 ==========
# DeepSeek API Key（https://platform.deepseek.com/）
# 有免费额度，推荐使用
DEEPSEEK_API_KEY=your_deepseek_api_key_here

# ========== 硅基流动配置 ==========
# 硅基流动 API Key（https://siliconflow.cn/）
# 完全免费，强烈推荐
SILICONFLOW_API_KEY=your_siliconflow_api_key_here

# ========== Moonshot (Kimi) 配置 ==========
# Moonshot API Key（https://platform.moonshot.cn/）
# 有免费试用额度
MOONSHOT_API_KEY=your_moonshot_api_key_here

# ========== OhMyGPT 配置 ==========
# OhMyGPT API Key（https://www.ohmygpt.com/）
# 中转服务，支持 GPT 系列模型
OHMYGPT_API_KEY=your_ohmygpt_api_key_here

# ========== Ollama 本地模型配置 ==========
# Ollama 本地模型（完全免费，无需网络）
# 需要先安装 Ollama: https://ollama.com/
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_MODEL=qwen2

# ========== 机器人配置 ==========
# 机器人监听地址
HOST=127.0.0.1

# 机器人监听端口
PORT=8080

# 超级管理员 QQ 号（多个用逗号分隔）
SUPERUSERS=["123456789"]

# 昵称（机器人被@时的称呼）
NICKNAME=["OpenClaw", "小爪"]

# ========== NapCat 配置 ==========
# NapCat WebSocket 地址
NAPCAT_WS_URL=ws://127.0.0.1:3001

# ========== 日志配置 ==========
# 日志级别: DEBUG, INFO, WARNING, ERROR
LOG_LEVEL=INFO

# 日志文件路径（留空则不保存）
LOG_FILE=

# ========== 高级配置 ==========
# 命令起始字符
COMMAND_START=["/", ""]
COMMAND_SEP=["."]

# 会话过期时间（秒）
SESSION_EXPIRE_TIMEOUT=120

# ========== 智能触发配置 ==========
# 是否启用智能触发模式（true/false）
# 启用后，机器人会自动检测群中的疑问和求助并主动回复
INTELLIGENT_TRIGGER_ENABLED=true

# 是否强制要求 @ 机器人（true/false）
# true：只有 @ 机器人时才会回复
# false：智能检测触发条件（疑问句、求助词等）
INTELLIGENT_TRIGGER_REQUIRE_MENTION=false

# 触发模式（正则表达式列表）
# 满足任意一个条件即触发
INTELLIGENT_TRIGGER_PATTERNS=["[？?]", "(有人|谁|怎么|如何|为什么|求|帮|解答|请教)", "(@机器人|@[Aa][Uu][Tt][Oo]|@[Bb][Oo][Tt])"]

# 查看最近多少条消息作为上下文
INTELLIGENT_TRIGGER_HISTORY_LIMIT=20

# 群组配置文件路径（JSON 格式）
# 用于为不同群组设置不同的智能触发规则
GROUP_CONFIG_FILE=group_configs.json

# ========== 简洁模式配置 ==========
# 回复模式：normal（正常）/ concise（简洁）/ detailed（详细）
REPLY_MODE=normal

# 回复最大字符数（简洁模式下生效）
REPLY_MAX_LENGTH=500

# 简洁模式触发模式（正则表达式列表）
# 匹配这些模式时自动使用简洁模式回复
CONCISE_MODE_PATTERNS=["[？?]", "(怎么|如何|为什么)"]
